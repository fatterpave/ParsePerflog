        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="523*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="startBtn" Content="Start" HorizontalAlignment="Left" Margin="23,27,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click" Grid.ColumnSpan="2"/>
