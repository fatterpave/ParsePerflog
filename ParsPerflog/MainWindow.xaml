            <FlowDocument/>
        </RichTextBox>
        <ProgressBar HorizontalAlignment="Left" Height="16" Margin="45,395,0,-260" VerticalAlignment="Top" Width="449" Grid.Column="1"/>
        <ComboBox x:Name="methodCombo" HorizontalAlignment="Left" Margin="102,27,0,0" VerticalAlignment="Top" Width="262" SelectionChanged="methodCombo_SelectionChanged" Grid.Column="1"/>
        <Button x:Name="exportBtn" Content="Export" HorizontalAlignment="Left" Margin="422,27,0,0" VerticalAlignment="Top" Width="75" Click="exportBtn_Click" Grid.Column="1"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Margin="23,149,0,-13" Width="526" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
